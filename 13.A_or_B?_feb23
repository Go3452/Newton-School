import java.io.*;
import java.util.*; 
class Main {
    public static void main (String[] args) {
      Scanner sc = new Scanner(System.in);
      String S=sc.next();
      int c1=0,c2=0;
      for(int i=0;i<S.length();i++)
      {
       if(S.charAt(i)=='A')
        c1++;
       else
        c2++;
      }
      if(c1>c2)
       System.out.println(c1-c2);
      else
       System.out.println(c2-c1);
    }
}
